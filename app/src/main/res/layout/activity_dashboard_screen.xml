<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/opacity_purple"
    tools:context=".presentation.activities.DashboardScreenActivity">

    <LinearLayout
        android:id="@+id/purple_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_background"
        android:orientation="horizontal"
        android:layout_marginBottom="-10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/white_client_details"
            android:orientation="horizontal">

                    <com.exxceliqsolutiions.taskuserdetails.utility.UserDetailsBoldTextView
                        android:id="@+id/dashboard_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:text="Hi, User"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />


        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/logout"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:backgroundTint="@color/header_rect_color"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_alignBottom="@+id/purple_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">


            <com.exxceliqsolutiions.taskuserdetails.utility.UserDetailsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_name"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_margin="@dimen/_2sdp"

                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/purple_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_details_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="2"
            android:layout_weight="1"
            tools:listitem="@layout/user_details_list_item"
           />


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>